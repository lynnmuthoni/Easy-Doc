<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easydoc">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyDOC"
        tools:targetApi="31">
        <activity
            android:name=".Admin"
            android:exported="false" />
        <activity
            android:name=".PatientsAmbulanceFragment"
            android:exported="false" />
        <activity
            android:name=".PatientHomeFragment"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <activity
            android:name=".DermatologistActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".DoctorHomeActivty"
            android:exported="false"
            android:label="@string/title_activity_doctor_home_activty"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".DoctorSignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".DoctorLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".HometwoActivity"
            android:exported="false"
            android:label="@string/title_activity_hometwo"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".AdminLogin"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".PatientSignInActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".UsersActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.EasyDOC.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyDOC.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>