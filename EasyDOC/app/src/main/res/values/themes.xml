<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyDOC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#08040F</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="inputfield">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#FBF8F8</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttons">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">#000000</item>
        <item name="color">#000000</item>
        <item name="android:background">#FCFCFC</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="buttons_doctors">

        <item name="android:layout_width">160dp</item>
        <item name="backgroundTint">#0487EF</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:text" type="font">calibri</item>

    </style>


    <style name="Theme.EASYSDOC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EASYSDOC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.EasyDOC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EasyDOC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyDOC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>